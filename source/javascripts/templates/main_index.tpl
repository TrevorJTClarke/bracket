<div class="row profile">
  <div class="col-md-6 col-md-offset-3">
    <div class="profile-meta">
      <h3>{{firstName}} {{lastName}}</h3>
      <span>{{email}}</span>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3 stats-row">
    <div class="stats-score">
      <div class="score-num">24</div>
      <div class="score-title">Win</div>
    </div>
    <div class="stats-score loss">
      <div class="score-num">13</div>
      <div class="score-title">Loss</div>
    </div>
    <div class="stats-score tie">
      <div class="score-num">4</div>
      <div class="score-title">Tie</div>
    </div>
  </div>
</div>
<hr>
<div class="row matches">
  <div class="col-md-6 col-md-offset-3">
    <h3>Championships</h3>
    <button id="newChampionship" class="btn btn-outline btn-create">New Championship</button>
    <ul class="profile-matches">
      <li class="match-item active">
        <div class="m-title">Game 1</div>
        <div class="m-subtitle"><span class="label label-primary">Active</span> pending start...</div>
        <i class="glyphicon glyphicon-chevron-right"></i>
      </li>
      <li class="match-item">
        <div class="m-title">Super Game</div>
        <div class="m-subtitle"><span class="label label-info">Ended</span> 3 days ago</div>
        <i class="glyphicon glyphicon-chevron-right"></i>
      </li>
      <li class="match-item">
        <div class="m-title">Totally Fun</div>
        <div class="m-subtitle"><span class="label label-success">You Won!</span> 5 days ago</div>
        <i class="glyphicon glyphicon-chevron-right"></i>
      </li>
    </ul>
  </div>
</div>
